@model POS.Models.Invoice

@{
	ViewData["Title"] = "Create";
}


	
<h1>Create</h1>

<h4>Invoice</h4>
<hr />
@{
	var text = TempData["Error"] as string;
	if (text != null)
	{
		<p style="color:red">@text</p>
	}
}
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" method="post">
			<div class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Number" class="control-label"></label>
				<input type="number" asp-for="Number" class="form-control" required min="1" />
				<span asp-validation-for="Number" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Date" class="control-label"></label>
				<input asp-for="Date" class="form-control" type="datetime-local" required />
				<span asp-validation-for="Date" class="text-danger"></span>
			</div>


			<div class="form-group">
				<label asp-for="Client.IdNumber" class="control-label">Client Id Number</label>
				<input type="text" asp-for="Client.IdNumber" class="form-control" required minlength="10" maxlength="10" />
			</div>
			<div class="form-group">
				<label asp-for="Client.Name" class="control-label">Client Name</label>
				<input type="text" asp-for="Client.Name" class="form-control" required />
			</div>

			<div class="form-group">
				<label asp-for="Client.Address" class="control-label">Client Adress</label>
				<input type="text" asp-for="Client.Address" class="form-control" required />
				<div />


				<div id="productsContainer">
				</div>











				<button type="button" id="addProductFormBtn" class="btn btn-secondary mb-3">
					Add Product
				</button>


				<div class="form-group">
					<input type="submit" asp-action="Create" class="btn btn-primary" />
				</div>


		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	<script>
		const searchProductsUrl = '@Url.Action("SearchProducts", "Products")';
	</script>
	<script src="~/js/jsScript.js"></script>

	@await Html.PartialAsync("_ValidationScriptsPartial")
}

